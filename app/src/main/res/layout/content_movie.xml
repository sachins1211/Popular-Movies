<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sachin.p1.movieDetails"
    tools:showIn="@layout/activity_movie">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout1"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/backdropView"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="165dp"
                android:layout_marginTop="130dp"
                android:background="@android:color/white"
                android:id="@+id/posterView"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Movie Title"
                android:id="@+id/titleView"
                android:layout_marginLeft="10dp"
                android:textSize="26sp"
                android:layout_below="@+id/backdropView"
                android:layout_toEndOf="@+id/posterView"
                android:textStyle="bold"/>




        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Summary"
            android:layout_below="@+id/layout1"
            android:textSize="20sp"
            android:id="@+id/summary"
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/overviewView"
            android:layout_below="@+id/summary"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/overviewView"
            android:id="@+id/rating"
            android:text="User Rating"
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/rating"
            android:id="@+id/star"
            android:src="@drawable/star"
            android:paddingRight="5dp"
            android:layout_marginLeft="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:id="@+id/starText"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/star"
            android:layout_below="@+id/rating" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/starText"
            android:id="@+id/releaseDate"
            android:text="Release Date"
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="20sp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2015"
            android:id="@+id/releasedView"
            android:textSize="18sp"
            android:layout_below="@+id/releaseDate"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            />



    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>